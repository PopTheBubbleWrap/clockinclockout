#!/bin/bash
# source ~/bin/clockinclockout/writeTime
source ./clockinclockout/writeTime

filename=./clockinclockout/$(date +"%F").txt
lastLine=""
if test -f "$filename"; then
  while read line; do
    lastLine=$line
  done < $filename

  read -a str_arr <<< "$lastLine"
  if [ ${str_arr[0]} == "ci" ]; then
    echo "You're already clocked in and been working for X"
  fi
fi

write_time ci

time=$(date +"%R")
echo "Welcome back! Clocked in at $time"


